<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:id="@+id/game_layout">

    <android.support.v7.widget.CardView
        xmlns:cardView="http://schemas.android.com/apk/res-auto"

        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cardView:cardCornerRadius="2dp"
        cardView:cardElevation="2dp"
        cardView:contentPaddingBottom="12dp"
        cardView:contentPaddingTop="12dp"
        cardView:contentPaddingLeft="12dp"
        cardView:contentPaddingRight="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/game_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="schmetterling-2"
                android:textColor="#00bf03"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14 hours"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:id="@+id/game_phase_time"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spring, 1906"
                android:textStyle="italic"
                android:layout_below="@+id/game_title"
                android:layout_alignParentStart="true"
                android:id="@+id/game_phase_date"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diplomacy"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:layout_below="@+id/game_phase_time"
                android:id="@+id/game_phase_type"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heartland"
                android:paddingRight="5dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/game_phase_date"
                android:textStyle="bold"
                android:id="@+id/game_nation_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:layout_toRightOf="@+id/game_nation_name"
                android:layout_below="@+id/game_phase_date"
                android:id="@+id/game_order_status" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_light"
                android:layout_toRightOf="@+id/game_order_status"
                android:layout_below="@+id/game_phase_date"
                android:id="@+id/game_mail_status"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>