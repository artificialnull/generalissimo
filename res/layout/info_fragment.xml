<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:cardView="http://schemas.android.com/apk/res-auto"
        cardView:cardCornerRadius="2dp"
        cardView:cardElevation="2dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:padding="16dp">

                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="âœ“"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:background="@drawable/circle"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:id="@+id/info_order_status"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diplomacy"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="24sp"
                    android:paddingStart="8dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/info_order_status"
                    android:id="@+id/info_phase_type" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="?android:textColorPrimary"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/info_phase_time"/>

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:src="@drawable/world"
                android:id="@+id/map_image_small" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Heartland"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textSize="20sp"
                    android:paddingRight="10dp"
                    android:paddingBottom="0dp"
                    android:id="@+id/info_country_name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:paddingLeft="0dp"
                    android:textSize="20sp"
                    android:layout_toEndOf="@+id/info_country_name"
                    android:textStyle="bold"
                    android:layout_alignBottom="@+id/info_country_name"
                    android:id="@+id/info_mail_status"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Autumn, 2003"
                    android:textStyle="italic"
                    android:layout_alignParentEnd="true"
                    android:textSize="16sp"
                    android:id="@+id/info_phase_date"
                    android:layout_alignBaseline="@+id/info_country_name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 units"
                    android:textSize="16sp"
                    android:paddingTop="2dp"
                    android:layout_alignStart="@+id/info_country_name"
                    android:layout_below="@+id/info_country_name"
                    android:id="@+id/info_unit_count"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 control points"
                    android:textSize="16sp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBaseline="@+id/info_unit_count"
                    android:id="@+id/info_cp_count"/>

            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>