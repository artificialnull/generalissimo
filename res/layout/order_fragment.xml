<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Orders"
        android:textSize="24sp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <View
            android:background="@color/cardview_light_background"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/order_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No orders to submit"
        android:textSize="20sp"
        android:paddingStart="8dp"
        android:id="@+id/order_none_message"
        android:visibility="gone"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_button_separator"
            app:layout_constraintGuide_percent="0.5"
            android:orientation="vertical"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/order_save_button"
            android:text="save"
            app:layout_constraintRight_toRightOf="@+id/order_button_separator"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/order_ready_button"
            android:text="ready"
            app:layout_constraintLeft_toLeftOf="@+id/order_button_separator"
            app:layout_constraintRight_toRightOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <WebView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:id="@+id/webview" />

</LinearLayout>